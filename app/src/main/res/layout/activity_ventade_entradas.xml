<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VentadeEntradasActivity">

    <EditText
        android:id="@+id/txtCant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="cantdiad de entradas"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/btnCerrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        tools:layout_editor_absoluteX="289dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Venta de entradas"
        android:textAlignment="center"
        android:textSize="34sp"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/txtPeli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Escriba la  peli"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="70dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="85dp"
        android:layout_height="22dp"
        android:text="Peliculas"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="94dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cantdiad"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="146dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="161dp"
        android:layout_height="40dp"
        android:lineSpacingExtra="16sp"
        android:text="Tipo de entrada"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="198dp" />

    <Button
        android:id="@+id/btnLimpiarEntrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Limpiar"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="479dp" />

    <Button
        android:id="@+id/btnNuevo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="481dp" />

    <CheckBox
        android:id="@+id/chkNiños"
        android:layout_width="154dp"
        android:layout_height="39dp"
        android:text="Niños (S/. 12.00)"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="361dp" />

    <CheckBox
        android:id="@+id/chkGene"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="General (S/. 20.00)"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="287dp" />

    <CheckBox
        android:id="@+id/chkCancha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Canchita grande (S/. 15.00)"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="287dp" />

    <CheckBox
        android:id="@+id/chkGaseGra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gaseosa Grande (S/. 10.00)"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="361dp" />
</androidx.constraintlayout.widget.ConstraintLayout>